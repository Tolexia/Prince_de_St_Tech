{% extends 'layout.html.twig' %}

{% block content %}
    <h1 id="titre">Créez l'atelier de vos rêves !</h1>
    <form class="formulaire" action="" method="post" enctype="multipart/form-data">
        <div>
            <label for="planete_image">Sélectionnez votre planète:</label><br>
            <input type="file" name="planete_image" id="planete_image"><br>
            <label for="planete_name">Donnez un nom à votre planète:</label><br>
            <input type="text" id="planete_name" name="planete_name"><br>
            <label for="image">Sélectionnez votre image:</label><br>
            <input type="file" name="image" id="image"><br>
            <label for="name">Donnez un nom à votre atelier:</label><br>
            <input type="text" id="name" name="name"><br>
            <label for="description">Description de l'atelier:</label><br>
            <textarea id="description" name="description"></textarea><br>
        </div>
        <input type="submit" value="Je crée mon atelier">    
    </form>
{% endblock %}